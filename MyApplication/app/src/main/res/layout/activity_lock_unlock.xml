<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/lockUnlock_scrollView"
    android:background="@color/background_blue"
    tools:context="com.alexzandr.myapplication.LockUnlockActivity">

   <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lockUnlock_table">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lockUnlock_firstRow">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refresh"
                    android:id="@+id/lockUnlock_buttonRefresh"
                    android:background="@color/lockUnlock_button_zoneAndLevel"
                    android:layout_margin="2px"
                    android:textSize="12sp"
                    android:textColor="@color/text_white"
                    android:onClick="onRefreshClick"/>
            </TableRow>
    </TableLayout>
</ScrollView>
